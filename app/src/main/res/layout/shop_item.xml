<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/shop_item_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/ic_launcher"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/shop_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/shop_item_photo"
                android:text="Name"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/shop_item_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop_item_name"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/shop_item_photo"
                android:background="@drawable/ic_point_green"
                android:fontFamily="@font/open_sans_semibold"
                android:paddingTop="2dp"
                android:paddingEnd="7dp"
                android:text="999dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="@dimen/sizePhoneText" />

            <TextView
                android:id="@+id/shop_item_owned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/shop_item_photo"
                android:layout_below="@+id/shop_item_point"
                android:fontFamily="@font/open_sans_semibold"
                android:paddingTop="2dp"
                android:text="@string/owned_item"
                android:textColor="@color/gray"
                android:textSize="@dimen/sizePhoneText" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>